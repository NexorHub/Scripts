<script>
    function copyToClipboard(id) {
        const text = document.getElementById(id).innerText;
        navigator.clipboard.writeText(text).then(function() {
            alert("Script copiado!");
        }, function(err) {
            alert("Erro ao copiar.");
        });
    }
</script>

