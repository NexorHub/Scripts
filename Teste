    <script src="https://cdnjs.cloudflare.com/ajax/libs/lucide/0.263.1/umd/lucide.min.js"></script>
    <script>
        // FunÃ§Ã£o para inicializar os Ã­cones Lucide de forma mais robusta
        function initLucideIcons() {
            if (typeof lucide !== 'undefined' && lucide.createIcons) {
                lucide.createIcons();
            } else {
                // Fallback: usar emojis se Lucide nÃ£o carregar
                const iconMappings = {
                    'key': 'â',
                    'youtube': 'â',
                    'message-circle': 'â',
                    'book-open': 'â',
                    'search': 'â',
                    'clipboard': 'â',
                    'check': 'â',
                    'x': 'â',
                    'wrench': 'â'
                };
                
                document.querySelectorAll('[data-lucide]').forEach(icon => {
                    const iconName = icon.getAttribute('data-lucide');
                    if (iconMappings[iconName]) {
                        icon.textContent = iconMappings[iconName];
                        icon.style.fontSize = '16px';
                    }
                });
            }
        }

        // Inicializar Ã­cones quando a pÃ¡gina carregar
        document.addEventListener('DOMContentLoaded', function() {
            // Tentar inicializar imediatamente
            initLucideIcons();
            
            // Tentar novamente apÃ³s um pequeno delay caso a biblioteca ainda esteja carregando
            setTimeout(initLucideIcons, 100);
            setTimeout(initLucideIcons, 500);
        });

        // TambÃ©m inicializar quando o script Lucide carregar
        window.addEventListener('load', initLucideIcons);

        function copyScript(button) {
            const scriptCode = button.parentElement.querySelector('.script-code').textContent.trim();
            navigator.clipboard.writeText(scriptCode).then(() => {
                const originalHTML = button.innerHTML;
                button.innerHTML = '<i data-lucide="check"></i> Copiado!';
                button.style.background = '#ffffff';
                button.style.color = '#00aa00';
                
                // Re-initialize the new check icon
                initLucideIcons();
                
                setTimeout(() => {
                    button.innerHTML = originalHTML;
                    button.style.background = '#ffffff';
                    button.style.color = '#000000';
                    // Re-initialize the original icon
                    initLucideIcons();
                }, 2000);
            }).catch(err => {
                console.error('Failed to copy: ', err);
                const originalHTML = button.innerHTML;
                button.innerHTML = '<i data-lucide="x"></i> Erro!';
                button.style.background = '#ffffff';
                button.style.color = '#aa0000';
                
                initLucideIcons();
                
                setTimeout(() => {
                    button.innerHTML = originalHTML;
                    button.style.background = '#ffffff';
                    button.style.color = '#000000';
                    initLucideIcons();
                }, 2000);
            });
        }

        function searchScripts() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const scriptCards = document.querySelectorAll('.script-card');
            
            scriptCards.forEach(card => {
                const title = card.querySelector('.script-title').textContent.toLowerCase();
                const description = card.querySelector('.script-description').textContent.toLowerCase();
                
                if (title.includes(searchTerm) || description.includes(searchTerm)) {
                    card.style.display = 'block';
                    card.style.animation = 'fadeIn 0.5s ease';
                } else {
                    card.style.display = searchTerm === '' ? 'block' : 'none';
                }
            });
        }

        // Real-time search
        document.getElementById('searchInput').addEventListener('input', searchScripts);

        // Add smooth parallax effect
        document.addEventListener('mousemove', (e) => {
            const cards = document.querySelectorAll('.script-card');
            const x = e.clientX / window.innerWidth;
            const y = e.clientY / window.innerHeight;
            
            cards.forEach((card, index) => {
                if (!card.matches(':hover')) {
                    const xMove = (x - 0.5) * (index % 2 === 0 ? 3 : -3);
                    const yMove = (y - 0.5) * (index % 2 === 0 ? 3 : -3);
                    card.style.transform = `translateX(${xMove}px) translateY(${yMove}px)`;
                }
            });
        });

        // Entry animation
        window.addEventListener('load', () => {
            const cards = document.querySelectorAll('.script-card');
              cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(50px)';
                    card.style.animation = 'fadeIn 0.6s ease forwards';
                }, index * 100);
            });
        });
    </script>
